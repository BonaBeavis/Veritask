# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
GET           /                                 @controllers.Application.index
GET           /randomUUID                       @controllers.Application.randomUUID

# User management API
GET           /users                            @controllers.Users.findUsers
POST          /user                             @controllers.Users.createUser
PUT           /user/:firstName/:lastName        @controllers.Users.updateUser(firstName: String, lastName: String)
POST          /person                           @controllers.Persons.createPerson
# POST        /tasksets                         @controllers.Tasksets.createTaskset

PUT           /tasks                            @controllers.Tasks.createBulk

GET           /tasksets/:id                     @controllers.Tasksets.one(id: java.util.UUID)
GET           /tasksets                         @controllers.Tasksets.all
POST          /tasksets                         @controllers.Tasksets.create
PUT           /tasksets/:id                     @controllers.Tasksets.update(id: java.util.UUID)
DELETE        /tasksets/:id                     @controllers.Tasksets.delete(id: java.util.UUID)
# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)




# GET           /                                 controllers.Assets.at(path="/public", file="index.html")

# GET        /assets/*file                 controllers.Assets.at(path="/public", file)

# GET		   /importdb					 controllers.ImportController.importDatabase