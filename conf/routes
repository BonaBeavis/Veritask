# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Frontend
GET         /                                 @controllers.Application.index
GET         /createTaskset                    @controllers.Tasksets.createTaskset
GET         /tasksets/:id                     @controllers.Tasksets.viewTaskset(id: String)
GET         /listTasksets                     @controllers.Tasksets.listTasksets

# Forms
POST        /tasksets                         @controllers.Tasksets.upsertTaskset

# User management API
GET         /users                            @controllers.Users.findUsers
POST        /user                             @controllers.Users.createUser
PUT         /user/:firstName/:lastName        @controllers.Users.updateUser(firstName: String, lastName: String)
POST        /person                           @controllers.Persons.createPerson
# POST        /tasksets                         @controllers.Tasksets.taskset

#PUT         /tasks                            @controllers.Tasks.createBulk

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)




# GET           /                                 controllers.Assets.at(path="/public", file="main.html")

# GET        /assets/*file                 controllers.Assets.at(path="/public", file)

# GET		   /importdb					 controllers.ImportController.importDatabase