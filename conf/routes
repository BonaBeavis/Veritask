# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Frontend
GET         /                                             @controllers.Application.index
GET         /createTaskset                                @controllers.Tasksets.createTaskset
GET         /listTasksets                                 @controllers.Tasksets.listTasksets
GET         /tasksets/:id                                 @controllers.Tasksets.viewTaskset(id: String)
POST        /tasksets/:tasksetId/uploadLinksetFile        @controllers.Tasksets.uploadLinksetFile(tasksetId: String)
POST        /tasksets                                     @controllers.Tasksets.postTaskset


# Widget
GET         /javascriptRoutes                             @controllers.Application.javascriptRoutes
GET         /template                                     @controllers.Application.template(callback: String)
GET         /widget                                       @controllers.Application.widget
GET         /widgetHTML                                   @controllers.Application.widgetHTML
GET         /getTask                                      @controllers.Application.getTask
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                 controllers.Assets.versioned(path="/public", file: Asset)


